<launch> 

	<arg name="package" />
	<arg name="filter_on"  />
	<arg name="arduino_on"  />
	<arg name="arduinoUsb" />
	<arg name="namespace" value="UGV"/>

<!--ULTRASONIC SENSOR, CONTROL & DATA NODES-->	
		
		<node name="Joystick" pkg="joy" type="joy_node" 
		 ns="$(arg namespace)"
		 />
		 
		<node name="control_node" pkg="$(arg package)" 
		type="control" ns="$(arg namespace)"
		launch-prefix="xterm -e" output="screen">
		
		<remap from="ultrasonicArray" to="filteredArray"
		 if="$(arg filter_on)" />
		</node>	
			
		<node  name="signal_filter" pkg="$(arg package)" type="sigFilter2"
		 ns="$(arg namespace)"
		 if="$(arg filter_on)" 
		 />
		
		<node  name="arduino_node" pkg="rosserial_python"
		 type="serial_node.py" 
		 args="$(arg arduinoUsb)" 
		 ns="$(arg namespace)"
		 if="$(arg arduino_on)" 
		 />
		
	
</launch>
