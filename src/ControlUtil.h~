//calculate

void Control::SonicCallBack( const fyp::Int16Array::ConstPtr& ary) //this collects info from front sensors
{
    sensor[0]    = ary->data[First];
    sensor[1]    = ary->data[Second];
    sensor[2]    = ary->data[Third];
    sensor[3]    = ary->data[Fourth];
    sensor[4]    = ary->data[Fifth];
    sensor[5]    = ary->data[Sixth];
}

float Control::calc_linearVel(int16_t& sensor_rd, const int& MAX_LIMIT, const int& MIN_LIMIT)
{
	int dist= sensor_rd>MAX_DIST ? MAX_DIST:sensor_rd;
    linear = (float)(dist-MIN_LIMIT)/(float)(MAX_LIMIT-MIN_LIMIT);
    linear = linear>0 ? linear:0;
    
    return linear;
}

